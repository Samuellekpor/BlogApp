<div>
  <div class="user-container">
    <img src="<%= @user.photo %>" alt="user-image">
    <div class="user-info">
      <h3><%= @user.name %></h3>
      <p>Number of posts : <%= @user.posts_counter || 0 %></p>
    </div>
  </div>
  <% @posts.each do |post| %>
    <%= link_to user_post_path(@user.id, post.id), class: "link-info" do %>
      <div>
        <%= link_to user_post_path(@user.id, post.id), class: "link-info" do %>
          <h4><%= post.title %></h4>
          <p><%= post.text %></p>
        <% end %>
      </div>
      <div>
        <small>Comments : <%= post.comments_counter || 0 %></small>
        <small>Likes : <%= post.likes_counter || 0 %></small>
      </div>
    <% end %>
    <div class="comments">
      <% post.comments.each do |comment| %>
        <p><%=comment.author.name%> : <%= comment.text %></p>
      <% end %>
    </div>
  <% end %>
  <div>
    <button>Pagination</button>
  </div>
</div>
